<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppExamenObandoBryan.Pages.PageMarca">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">
            <Frame BackgroundColor="Black" Padding="15" CornerRadius="10">
                <Label Text="Registro de Marcas!" HorizontalTextAlignment="Center" TextColor="White" FontSize="15"/>
            </Frame>

            <Label></Label>

            <Grid x:Name="GridMarcas">
            </Grid>

            <Label></Label>

            <Entry Placeholder="Id" x:Name="txtId" FontSize="15" ></Entry>
            <Entry Placeholder="Nombre" x:Name="txtNombre" FontSize="15"></Entry>
            <Entry Placeholder="Descripcion" x:Name="txtDescripcion" FontSize="15"></Entry>

            <Button Text="Regresar" Clicked="Button_Clicked" TextTransform="None"></Button>
            <Label></Label>

            <Button Text="Cargar Datos" Clicked="Button_Clicked1" TextTransform="None"></Button>
            <Button Text="Ingresar Marca" Clicked="Button_Clicked2" TextTransform="None"></Button>
            <Button Text="Actualizar Marca" Clicked="Button_Clicked3" TextTransform="None"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>